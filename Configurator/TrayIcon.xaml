<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:Unishare.Apps.WindowsConfigurator"
                    xmlns:resx="clr-namespace:Unishare.Apps.WindowsConfigurator.Resources">

    <ContextMenu x:Shared="false"
                 x:Key="TrayMenu">
        <MenuItem Header="{x:Static resx:UILanding.PersonalCloud}"
                  FontFamily="Microsoft YaHei UI"
                  IsEnabled="False"/>
        <MenuItem Header="v2.0 (20200320)"
                  FontFamily="Microsoft YaHei UI"
                  IsEnabled="False" />
        <Separator />
        <MenuItem Header="{x:Static resx:UISettings.DeveloperExit}"
                  FontFamily="Microsoft YaHei UI"
                  Command="{Binding ExitApplicationCommand}" />
    </ContextMenu>

    <tb:TaskbarIcon x:Key="TrayIcon"
                    IconSource="pack://application:,,,/App.ico"
                    ToolTipText="{x:Static resx:UISettings.Configurator}"
                    ContextMenu="{StaticResource TrayMenu}"
                    DoubleClickCommand="{Binding ShowWindowCommand}">

        <tb:TaskbarIcon.DataContext>
            <local:TrayIconViewModel />
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>
</ResourceDictionary>
